{% extends "layouts/base.html.twig" %}
{% block title 'Hideout' %}

{% block body %}
  <div class="container text-center">
   <div class="col-12 mx-auto">
    <h1 class="mt-4 text-center">Hideouts</h1>

    <table class="mt-5 table table-hover text-center">
    <thead>
        <tr>
        <th scope="col">Id</th>
        <th scope="col">Address</th>
        <th scope="col">Country</th>
        <th scope="col">Info</th>
        </tr>
    </thead>
    <tbody>
    {% for hideout in hideouts %}
        <tr class="table-primary">
        <td>{{hideout.id}}</td>
        <td>{{hideout.address}}</td>
        <td>{{hideout.country.name}}</td>
        <td><a href="{{ path('app_hideout_show', {id: hideout.id})}}"<i class="btn btn-dark fa-solid fa-plus rounded"></i></a></td>
        </tr>
    {% endfor %}
    </tbody>
       
    </table>
    <div class="d-flex justify-content-center">
    {% do hideouts.setPageRange(2) %}
    {{knp_pagination_render(hideouts, 'layouts/pagination.html.twig')}}
  </div>
      <a href="{{ path('app_hideout_create')}}" class="btn rounded btn-info">Add Hideout</a><br>
      <a href="{{ path('app_hideout_type')}}" class="mt-3 btn rounded btn-warning">Add Type of Hideout</a>
   </div>
  </div>
{% endblock %}