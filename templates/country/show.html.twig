{% extends "layouts/base.html.twig" %}
{% block title %}{{ country.name }}{% endblock %}

{% block body %}
  <div class="container">
     <div class="col-12 mx-auto">
    <h1 class="mt-4 text-center">Country</h1>

    <table class="mt-5 table table-hover text-center">
    <thead>
        <tr>
        <th scope="col">Id</th>
        <th scope="col">Name</th>
        <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        <tr class="table-primary">
        <td>{{country.id}}</td>
        <td>{{country.name}}</td>
        <td><a href="{{ path('app_country')}}" class="btn btn-sm btn-primary">Go Back</a>
            <a href="{{path('app_country_edit', {id: country.id})}}" class="btn btn-sm btn-dark">Edit</a>
            <a href="#" onclick="event.preventDefault(); confirm('Are You sure?')&& document.getElementById('js-country-delete-form').submit();" class="btn btn-sm btn-danger">Delete</a>   

