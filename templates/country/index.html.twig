{% extends "layouts/base.html.twig" %}
{% block title 'Countries' %}

{% block body %}
  <div class="container text-center">
   <div class="col-12 mx-auto">
    <h1 class="mt-4 text-center">Countries</h1>

    <table class="mt-5 table table-hover text-center">
    <thead>
        <tr>
        <th scope="col">Id</th>
        <th scope="col">Name</th>
        <th scope="col">Info</th>
        </tr>
    </thead>
    <tbody>
    {% for country in countries %}
        <tr class="table-primary">
        <td>{{country.id}}</td>
        <td>{{country.name}}</td>
        <td><a href="{{ path('app_country_show', {id: country.id})}}"<i class="btn btn-dark fa-solid fa-plus rounded"></i></a></td>
        </tr>
    {% endfor %}
    </tbody>    
    </table>
    <div class="d-flex justify-content-center">
    {% do countries.setPageRange(2) %}
    {{knp_pagination_render(countries, 'layouts/pagination.html.twig')}}
  </div>
      <a href="{{ path('app_country_create')}}" class="btn rounded btn-info">Add Country</a></td>
   </div>
  </div>
{% endblock %}