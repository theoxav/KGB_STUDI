{% extends "layouts/base.html.twig" %}
{% block title 'Agents' %}

{% block body %}
  <div class="container text-center">
   <div class="col-12 mx-auto">
    <h1 class="mt-4 text-center">Our Agents</h1>

    <table class="mt-5 table table-hover text-center">
    <thead>
        <tr class="table-secondary">
        <th scope="col">FirstName</th>
        <th scope="col">LastName</th>
        <th scope="col">Infos</th>
        </tr>
    </thead>
    <tbody>
    {% for agent in agents %}
        <tr class="table-dark ">
        <td>{{agent.firstName}}</td>
        <td>{{agent.lastName}}</td>
        <td><a href="{{ path('app_agent_show', {id: agent.id})}}"<i class="btn btn-info fa-solid fa-plus rounded"></i></a></td>
        </tr>
    {% endfor %}
    </tbody>    
    </table>
   <div class="d-flex justify-content-center">
    {% do agents.setPageRange(2) %}
    {{knp_pagination_render(agents, 'layouts/pagination.html.twig')}}
  </div>
      <a href="{{ path('app_agent_create')}}" class="btn rounded btn-info">Add Agent</a><br>
  </div>
  
{% endblock %}
